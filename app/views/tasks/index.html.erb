<div class="container index-container">

  <h1><%= "Welcome to your task manager!" %></h1>

  <%= link_to "Add Task", new_task_path, class: "btn btn-primary add-btn" %>

  <% @tasks.each do |task| %>
    <div class="card">
    <h2><%= task.name %></h2>
      <% if task.status == true %>
        <p><%= "Task is done!" %></p>
      <% else %>
        <p><%= "Task is NOT done!" %></p>
      <% end %>
      <div class="action-btns">
          <%= link_to "Delete a Task", task_path(task), method: :delete, class: "btn btn-danger" %>
          <%= link_to "Edit Task", edit_task_path(task), class:"btn btn-primary" %>
          <%= link_to "View Task", task_path(task), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>


</div>
